@model SERGETStore.App.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Novo Produto";
}

<!--TODO: verificar estilo inline para baixar todas as páginas-->
<h1 style="padding-top:50px">@ViewData["Title"]</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create">
            <vc:Summary></vc:Summary>

            <div class="form-group">
                <label asp-for="FornecedorId" class="control-label"></label>
                <select asp-for="FornecedorId" class="form-select"
                        asp-items="@(new SelectList(Model.Fornecedores, "Id", "Nome"))">
                    <option></option>
                </select>

                <span asp-validation-for="FornecedorId" class="text-danger"></span>
            </div>



            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea asp-for="Descricao" class="form-control" ></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="form-group">
                
                    <label asp-for="ImagemUpload"  class="form-label"></label>
                    <input type="file" class="form-control" id="ImagemUpload" 
                            asp-for="ImagemUpload" />
                    <span asp-validation-for="ImagemUpload" class="text-danger"></span>
            </div>

            <div class="form-group">
                <!--TODO: O CAMPO ABAIXO PRECISA RECONHECER ENTRADAS COM , APARENTEMENTE ELE NÃO ESTÁ ENTENDENDO DECIMAR, TENTAR DOUBLE -->
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="cADASTRAR" class="btn btn-primary" />

                <a asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $("#ImagemUpload").attr("data-val-required","Adicione uma imagem");
    </script>



